---
layout: none
---
[
{% for post in site.posts %}
    {
    "title"         : "{{ post.title | escape }}",
    "categories"    : "{{ post.categories | join: '' | upcase }}",
    "tags"          : "{{ post.tags | join: ', ' }}",
    "url"           : "{{ post.url | prepend: site.baseurl }}",
    "date"          : "{{ post.date | date: site.date_format }}"
    }{% unless forloop.last %},{% endunless %}
{% endfor %}
]