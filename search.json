---
layout: none
---
[
{% for post in site.posts %}
    {%- assign today = post.date | date: "%a" -%}
    {%- capture today -%}
        {%- case today -%}
            {%- when "Sun" -%}
                {{ "일" }}
            {%- when "Mon" -%}
                {{ "월" }}
            {%- when "Tue" -%}
                {{ "화" }}
            {%- when "Wed" -%}
                {{ "수" }}
            {%- when "Thu" -%}
                {{ "목" }}
            {%- when "Fri" -%}
                {{ "금" }}
            {%- when "Sat" -%}
                {{ "토" }}
        {%- endcase -%}
    {%- endcapture -%}
    {
    "title"         : "{{ post.title | escape }}",
    "categories"    : "{{ post.categories | join: '' | upcase }}",
    "tags"          : "{{ post.tags | join: ', ' }}",
    "url"           : "{{ post.url | prepend: site.baseurl }}",
    "date"          : "{{ post.date | date: '%Y.%m.%d' }} {{ today }}"
    }{% unless forloop.last %},{% endunless %}
{% endfor %}
]